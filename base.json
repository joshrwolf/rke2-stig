{
  "variables": {
    "aws_access_key": "{{ env `AWS_ACCESS_KEY_ID` }}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
    "rke2_version": "v1.18.9+rke2r1"
  },
  "builders": [
    {
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "ami_name": "rke2-",
      "instance_type": "t3.micro",
      "region": "us-gov-west-1",
      "ami_regions": ["us-gov-west-1", "us-gov-east-1"],
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu-minimal/images/*/ubuntu-{{ user `ubuntu_version` }}-*",
          "root-device-type": "ebs"
        },
        "owners": [],
        "most_recent": true
      },
      "ssh_username": "ubuntu",
      "type": "amazon-ebs",
      "tags": {
        "created": "{{ timestamp }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/",
      "destination": "/home/ubuntu"
    }
  ]
}